@model Vidly.Models.CustomerViewModel

@{
    ViewBag.Title = "New";
    Layout = "_Layout";
}

<h2>Add New Customer</h2>


@using (Html.BeginForm("Add", "Customers", "Post"))
{
<label asp-for="FirstName" class="control-label">First Name:</label>
<br />
<input type="text" required placeholder="Required" name="FirstName" class="form-control" value="" />
<br />
<label asp-for="LastName" class="control-label">Last Name:</label>
<br />
<input type="text" required placeholder="Required" name="LastName" class="form-control" value="" />
<br />
<label asp-for="Birthdate" class="control-label">Date Of Birth:</label>
<br />
<input type="text" required placeholder="YYYY-MM-DD" name="Birthdate" class="form-control" value="" />
@Html.ValidationMessageFor(m => m.FirstName)

<br />
<label asp-for="PhoneNumber" class="control-label">Phone Number:</label>
<br />
<input type="text" required placeholder="Required" name="PhoneNumber" class="form-control" value="" />
<br />
<label asp-for="Email" class="control-label">Email:</label>
<br />
<input type="text" required placeholder="Required" name="Email" class="form-control" value="" />
<br />
<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter)Subscribed to Newsletter?
    </label>
</div>
@Html.AntiForgeryToken()
<input type="submit" name="Add" value="Add Customer" class="btn btn-default" />

}



























