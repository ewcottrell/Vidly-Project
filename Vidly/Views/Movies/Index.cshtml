@using Vidly.Models;
@model IEnumerable<Vidly.Models.Movie>
 
@{
	ViewBag.Title = "Movies";
	Layout = "_Layout";
}

<button type="submit" class="btn btn-default" id="add-new-movie">Add New Movie</button>
<button type="submit" class="btn btn-default" onclick="location.href ='@Url.Action("AddNewMovie", "Movies")'">Add New Movie<</button>
<h2>Movies</h2>





<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Movie</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var movie in Model)
		{
			<tr>
				<td>@movie.Name</td>
			</tr>
		}
	</tbody>
</table>
