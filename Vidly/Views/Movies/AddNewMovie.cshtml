@model Vidly.Models.Movie

@{
	ViewBag.Title = "New";
	Layout = "_Layout";
}

<h3>Add New Movie:</h3>
@using (Html.BeginForm())
{
	<label asp-for="Name" class="control-label">Name:</label>
	<br />
	<input type="text" name="Name" class="form-control" value="" />
	<br />
	<label asp-for="Year" class="control-label">Year:</label>
	<br />
	<input type="number" name="Year" class="form-control" value="" />
	<br />
	<label asp-for="Genre" class="control-label">Genre:</label>
	<br />
	<input type="text" name="Genre" class="form-control" value="" />
	<br />
	<input type="submit" name="Insert" value="Add Movie" class="btn btn-default" />
}